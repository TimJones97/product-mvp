model Hub {
  id    Int     @id @default(autoincrement())
  name  String?
  location Json?
  type Json?
  amenities Json?
  images Json?
  availability String?
  rules Json?
  description String?
  status Status? @default(PENDING)
  createdAt DateTime @default(now())
}


model UserRole {
  id Int  @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateddAt DateTime @default(now())
  name String
  User User? @relation(fields: [userId],references:[id])
  userId Int
  @@unique([name,userId])
}

model User {
  id Int  @id @default(autoincrement())
  uuid String @unique
  guildId String
  createdAt DateTime @default(now())
  updateddAt DateTime @default(now())
  userRoles UserRole[]
}

enum Status {
  PENDING
  ACTIVE
  DISABLED
}
