model Hub {
  id    Int     @id @default(autoincrement())
  name  String?
  location Json?
  type Json?
  amenities Json?
  images Json?
  availability String?
  rules Json?
  description String?
  status Status? @default(PENDING)
  createdAt DateTime @default(now())
  reservations Reservation[]
  owner User @relation(fields: [ownerId],references:[id])
  ownerId Int
  reviews Review[]
}

model Reservation{
  id Int @id @default(autoincrement())
  checkInDate DateTime
  checkOutDate DateTime
  notes String?
  createdAt DateTime @default(now())
  updateddAt DateTime @default(now())
  hub Hub @relation(fields: [hubId],references:[id])
  hubId Int
  owner User @relation(fields: [ownerId],references:[id])
  ownerId Int
}

model Review {
  id Int @id @default(autoincrement())
  rating Int @default(0)
  comments String
  owner User @relation(fields:[ownerId],references: [id])
  hub Hub  @relation(fields:[hubId],references: [id])
  ownerId Int
  hubId Int
}


model UserRole {
  id Int  @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateddAt DateTime @default(now())
  name String
  user User? @relation(fields: [userId],references:[id])
  userId Int
  @@unique([name,userId])
}

model User {
  id Int  @id @default(autoincrement())
  uuid String @unique
  guildId String
  createdAt DateTime @default(now())
  updateddAt DateTime @default(now())
  userRoles UserRole[]
  reservations Reservation[]
  hubs Hub[]
  reviews Review[]
}

enum Status {
  PENDING
  ACTIVE
  DISABLED
}
