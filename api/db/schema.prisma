model Hub {
  id    Int     @id @default(autoincrement())
  name  String?
  location Json?
  type Json?
  amenities Json?
  images Json?
  availability Json?
  rules Json?
  description String?
  status Status? @default(PENDING)
  createdAt DateTime @default(now())
  reservations Reservation[]
  owner User @relation(fields: [ownerId],references:[uuid])
  ownerId String
  reviews Review[]
}

model Reservation{
  id String @id @unique
  checkInDate DateTime
  checkOutDate DateTime
  notes String?
  address String?
  isApproved Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  hub Hub @relation(fields: [hubId],references:[id])
  hubId Int
  owner User @relation(fields: [ownerId],references:[uuid])
  ownerId String
}

model Review {
  id Int @id @default(autoincrement())
  rating Int @default(0)
  comments String
  owner User @relation(fields:[ownerId],references: [uuid])
  hub Hub  @relation(fields:[hubId],references: [id])
  ownerId String
  hubId Int
}


model UserRole {
  id Int  @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateddAt DateTime @default(now())
  name String
  user User? @relation(fields: [userId],references:[uuid])
  userId String
  @@unique([name,userId])
}

model User {
  uuid String @id @unique
  guildId String
  userName String?
  avatar String?
  createdAt DateTime @default(now())
  updatedAt DateTime? @default(now())
  userRoles UserRole[]
  reservations Reservation[]
  hubs Hub[]
  reviews Review[]
}

enum Status {
  PENDING
  ACTIVE
  DISABLED
}
